<resources>

    <style name="systemui_content_textview_define_24">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/content_normal_white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="systemui_content_textview_des_24">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/content_normal_white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="systemui_content_textview_define_30_white">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="systemui_content_textview_define_30">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/content_normal_white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="systemui_content_textview_define_32">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/content_normal_white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Keyguard_Presentation">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>


    <style name="sb_btn">
        <item name="android:layout_width">@dimen/dp_28</item>
        <item name="android:layout_height">@dimen/dp_28</item>
        <item name="android:layout_marginEnd">@dimen/dp_21</item>
    </style>
    <style name="nb_btn">
        <item name="android:layout_width">136px</item>
        <item name="android:layout_height">136px</item>
    </style>
    <style name="nb_btn_temperature">
        <item name="android:layout_width">56px</item>
        <item name="android:layout_height">56px</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="nb_divider_box">
        <item name="android:layout_width">@dimen/dp_1</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:background">@null</item>
    </style>
    <style name="nb_divider">
        <item name="android:layout_width">@dimen/dp_1</item>
        <item name="android:layout_height">@dimen/dp_20</item>
        <item name="android:background">@color/white</item>
        <item name="alpha">0.2</item>
    </style>
    <!-- 空调温度文字 -->
    <style name="nb_temperature_text">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40px</item>
    </style>

    <style name="volume_bar_anim">
        <item name="android:windowEnterAnimation">@anim/volume_bar_fade_in</item>
        <item name="android:windowExitAnimation">@anim/volume_bar_fade_out</item>
    </style>

    <style name="pupDialog">
        <item name="android:windowEnterAnimation">@anim/pop_in_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="RaiteText" />

    <style name="RaiteText.Regular" parent="RaiteText">
        <item name="android:fontFamily">@font/raite_font_regular</item>
    </style>

    <style name="RaiteText.tab.unselect" parent="RaiteText.Regular">
        <item name="android:textSize">40px</item>
        <item name="android:lineHeight">50px</item>
    </style>

    <style name="RaiteText.Medium" parent="RaiteText">
        <item name="android:fontFamily">@font/raite_font_medium</item>
    </style>

    <style name="RaiteText.tab.select" parent="RaiteText.Medium">
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:lineHeight">@dimen/dp_18</item>
    </style>

    <style name="ToastStyle" parent="android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- 左侧固定应用列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fixed_apps_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" />

    <!-- 中间桌面切换器 -->
    <LinearLayout
        android:id="@+id/desktop_switcher_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/desktop_switcher_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="切换桌面" />

        <LinearLayout
            android:id="@+id/page_indicator_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" />

    </LinearLayout>

    <!-- 右侧可编辑应用列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/editable_apps_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" />

</RelativeLayout> 
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/naviView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nb_bg">

    <ImageButton
        android:id="@+id/homeBtn"
        style="@style/nb_btn"
        android:layout_marginEnd="116dp"
        android:background="@drawable/selector_nv_home"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/setBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/setBtn"
        style="@style/nb_btn"
        android:background="@drawable/selector_nv_settng"
        android:focusable="true"
        android:layout_marginEnd="117dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/homeBtn"
        app:layout_constraintRight_toLeftOf="@id/centerBox"
        app:layout_constraintTop_toTopOf="parent" />

    <!--空调-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/centerBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/setBtn"
        app:layout_constraintRight_toLeftOf="@id/warnBtn"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mcDownBtn"
            style="@style/nb_btn_temperature"
            android:background="@drawable/nv_left_white"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:clickable="true" />

        <TextView
            android:id="@+id/mcTv"
            style="@style/nb_temperature_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/mcDownBtn"
            app:layout_constraintEnd_toStartOf="@id/mcUpBtn" />

        <ImageView
            android:id="@+id/mcUpBtn"
            style="@style/nb_btn_temperature"
            android:background="@drawable/nv_right_white"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/mcTv"
            app:layout_constraintEnd_toStartOf="@id/airBtn"
            android:clickable="true" />

        <ImageButton
            android:id="@+id/airBtn"
            style="@style/nb_btn"
            android:background="@drawable/selector_nv_air"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/mcUpBtn"
            app:layout_constraintEnd_toStartOf="@id/tempDownBtn" />

        <ImageView
            android:id="@+id/tempDownBtn"
            style="@style/nb_btn_temperature"
            android:background="@drawable/nv_left_blue"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/airBtn"
            app:layout_constraintEnd_toStartOf="@id/tempTv"
            android:clickable="true" />

        <TextView
            android:id="@+id/tempTv"
            style="@style/nb_temperature_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tempDownBtn"
            app:layout_constraintEnd_toStartOf="@id/tempUpBtn" />

        <ImageView
            android:id="@+id/tempUpBtn"
            style="@style/nb_btn_temperature"
            android:background="@drawable/nv_right_red"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/warnBtn"
        style="@style/nb_btn"
        android:background="@drawable/selector_nv_warn"
        android:focusable="true"
        android:layout_marginStart="117dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/centerBox"
        app:layout_constraintRight_toLeftOf="@id/quesBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/quesBtn"
        style="@style/nb_btn"
        android:background="@drawable/selector_nv_question"
        android:focusable="true"
        android:layout_marginStart="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/warnBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>